<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:background="#2196f3"
                                             android:layout_height="match_parent" tools:layout_editor_absoluteY="25dp">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="110dp"
            android:layout_height="0dp" android:src="@drawable/user"
            android:id="@+id/circleImageView"
            android:layout_marginTop="144dp"
            android:layout_marginBottom="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView3" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome, #48526559"
            android:textColor="#fefffa"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:id="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/addQuestionButton" android:layout_marginBottom="269dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:text="Points: 50"
            android:textAlignment="center"
            android:textColor="#fefffa"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:id="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginBottom="205dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Add question"
            android:textAllCaps="false"
            android:background="@drawable/rounded_button"
            android:drawableLeft="@drawable/plus_icon"
            android:textColor="#fefffd"
            android:layout_width="135dp"
            android:layout_height="0dp"
            android:id="@+id/addQuestionButton" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="212dp"
            app:layout_constraintBottom_toTopOf="@+id/textView3"/>
</android.support.constraint.ConstraintLayout>